@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
    <!-- Navbar for smaller screens -->
    <nav class="hide-on-large-only">
        <div class="nav-wrapper">
            <!-- Burger menu on the left -->
            <a href="#" data-target="mobile-sidebar" class="sidenav-trigger left"><i class="material-icons">menu</i></a>
            <!-- Centered logo -->
            <a href="@Url.Action("Dashboard", "Home")" class="brand-logo center">
                <img src="/Content/peraminder_nav.png" alt="Logo" class="responsive-img nav-logo">
            </a>
        </div>
    </nav>

    <!-- Sidebar -->
    <ul class="sidenav sidenav-fixed" id="sidebar">
        <!-- Logo -->
        <a href="@Url.Action("Dashboard", "Home")" class="logo-link">
            <div class="logo">
                <img src="/Content/peraminder_nav.png" style="background-color: transparent; transform: none; filter: none; cursor: default;" alt="Dashboard Logo">
            </div>
        </a>

        <!-- Top links -->
        <li>
            <a href="@Url.Action("Dashboard", "Home")" class="waves-effect">
                <img src="/Content/dashboard-icon.png" alt="Dashboard Icon" style="width: 20px; margin-right: 8px; margin-top: 5px;"> Dashboard
            </a>
        </li>
        <li>
            <a href="@Url.Action("Transactions", "Home")" class="waves-effect">
                <img src="/Content/transaction-icon.png" alt="Transactions Icon" style="width: 20px; margin-right: 8px; margin-top: 5px;"> Transactions
            </a>
        </li>


        <!-- Bottom links -->
        <li>
            <a ng-href="" ng-click="logoutFunc()" class="waves-effect">
                <img src="/Content/logout-icon.png" alt="Logout Icon" style="width: 20px; margin-right: 8px; margin-top: 5px"> Log out
            </a>
        </li>
    </ul>
</div>

<!-- Main Content -->
<div class="col s12 m9 offset-m3">
    <div class="main-content">
        <!-- Welcome Card -->
        <div class="row">
            <div class="col s12">
                <div class="card">
                    <div class="card-content" style="background-color: #264027; border-radius: 10px; box-shadow: none !important; margin-top:-6px !important;">
                        <div class="row">
                            <!-- Left Column -->
                            <div class="col s12 m6">
                                <p style="font-size: 14px; color: white; margin-left: 20px; margin-top:10px;">@DateTime.Now.ToString("MMMM dd, yyyy")</p>

                                <br />
                                <br />

                                <h4 style="margin: 5px 0; margin-left: 20px; color: white; font-weight: 600;">Welcome back, @ViewBag.FirstName!</h4>
                                <p style="font-size: 16px; color: white; margin-left: 20px;">Stay on top of your pera!</p>
                            </div>
                            <!-- Right Column -->
                            <div class="col s12 m6">
                                <img src="/Content/welcome-img.png" alt="Welcome Image" style="width: 72%; height: auto; object-fit: cover; margin-bottom: -50px; margin-top: -14px; margin-left: 180px;">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <!-- Left Column -->
            <div class="col s12 m6">
                <h2 class="financial-health">Financial Health</h2>
                <div class="btn-group summary-buttons" style="display: flex; justify-content: flex-start; margin: 10px 0;">
                    <button class="btn waves-effect waves-light summary-btn" ng-click="getSummary('daily')">
                        Daily
                    </button>
                    <button class="btn waves-effect waves-light summary-btn" ng-click="getSummary('weekly')">
                        Weekly
                    </button>
                    <button class="btn waves-effect waves-light summary-btn" ng-click="getSummary('monthly')">
                        Monthly
                    </button>
                    <button class="btn waves-effect waves-light summary-btn" ng-click="getSummary('yearly')">
                        Yearly
                    </button>
                </div>
     

            <div class="row financial-health">
                <div class="col s4">
                    <div class="card center-align">
                        <i class="material-icons large" style="color: #264027;">savings</i>
                        <h5 style="font-size: 18px; font-weight: bold;">₱{{ totalIncome | number:2 }}</h5>
                        <p class="summary-label">Total Income</p>
                    </div>
                </div>
                <div class="col s4">
                    <div class="card center-align">
                        <i class="material-icons large" style="color: #264027;">remove_circle_outline</i>
                        <h5 style="font-size: 18px; font-weight: bold;">₱{{ totalExpenses | number:2 }}</h5>
                        <p class="summary-label">Total Expense</p>
                    </div>
                </div>
                <div class="col s4">
                    <div class="card center-align">
                        <i class="material-icons large" style="color: #264027;">account_balance</i>
                        <h5 style="font-size: 18px; font-weight: bold;">₱{{ balance | number:2 }}</h5>
                        <p class="summary-label">Balance</p>
                    </div>
                </div>
            </div>

            <br />

            <h2 class="financial-health">Transaction Breakdown</h2>
            Mas kilalanin ang iyong mga transactions!
            <div class="card">


                <div class="card-content">
                    <canvas id="expenseBreakdownChart"></canvas>
                </div>
            </div>
        </div>



            <!-- Right Column -->
            <div class="col s12 m6">
                <h2 class="financial-health">Cash Flow</h2>
                Saan napupunta ang iyong pera?

                <div class="card">
                    <div class="card-content">
                        <canvas id="incomeExpenseChart" style="width:100%; height:400px;"></canvas>
                    </div>
                </div>
                <br />
                <h2 class="financial-health">Category Trends</h2>
                Alamin ang pagbabago sa bawat category!

                <div class="card">
                    <div class="card-content">
                        <canvas id="categoryTrendsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
