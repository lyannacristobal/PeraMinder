@{
    Layout = "~/Views/Shared/_ContactLayout.cshtml";
}

<nav class="navbar">
    <!-- Left side: Logo as a button -->
    <div class="navbar-left">
        <a href="@Url.Action("Index", "Home")" style="display: flex; align-items: center; padding: 0; margin: 0;">
            <img src="~/Content/FINAL - PeraMinder Logo.png" alt="Logo">
        </a>
        <div class="nav-links-left">
            <a href="@Url.Action("Index", "Home")" style="font-weight: 700 !important;">HOME</a>
            <a href="@Url.Action("WhyUs", "Home")" style="font-weight: 700 !important;">WHY US</a>
            <a href="@Url.Action("Features", "Home")" style="font-weight: 700 !important;">FEATURES</a>
            <a href="@Url.Action("ContactPage", "Home")" style="font-weight: 700 !important;">CONTACT</a>
        </div>
    </div>

    <!-- Right side: Sign Up button -->
    <a href="@Url.Action("RegistrationPage", "Home")" class="get-started" style="font-weight: 700 !important;">GET STARTED</a>

    <!-- Hamburger Icon -->
    <div class="hamburger-menu" ng-click="toggleMenu()">
        <!-- Bind the click event -->
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
    </div>
</nav>

<!-- 1st Section of Contact Page -->
<section class="landing-page">
    <div class="landing-left" style="margin-left: 20px;">
        <h1 class="landing-title">Nandito kami!</h1>
        <p class="landing-subtitle">Get in touch with us.</p>

        <!-- Contact Form -->
        <form style="margin-left: -10px;">
            <!-- Name and Email in one row -->
            <div class="row">
                <div class="input-field col s6">
                    <input id="name"
                           type="text"
                           class="validate"
                           ng-model="feedback.fullName"
                           required
                           maxlength="70"
                           title="Full Name is required and must not exceed 70 characters." />
                    <label for="name">Full Name <span style="color: red;">*</span></label>
                </div>
                <div class="input-field col s6">
                    <input id="email"
                           type="email"
                           class="validate"
                           ng-model="feedback.email"
                           required
                           maxlength="150"
                           title="Email is required, must be valid, and must not exceed 150 characters." />
                    <label for="email">Email Address <span style="color: red;">*</span></label>
                </div>
            </div>
            <!-- Message field -->
            <div class="row">
                <div class="input-field col s12">
                    <textarea id="message"
                              class="materialize-textarea"
                              ng-model="feedback.message"
                              required
                              maxlength="700"
                              title="Message is required and must not exceed 700 characters."></textarea>
                    <label for="message">Message <span style="color: red;">*</span></label>
                </div>
            </div>
            <!-- Submit button -->
            <div class="row">
                <button class="btn waves-effect waves-light"
                        type="button"
                        ng-click="submitFeedback()"
                        style="font-family: 'Poppins', sans-serif; font-size: 16px; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2); display: flex; justify-content: center; align-items: center; text-align: center; background-color: #F5D547; color: white; border-radius: 25px; padding: 10px 20px; height: 38px; margin-top: 20px; box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1); transition: all 0.3s ease;">
                    <b>Submit Feedback</b>
                </button>
            </div>
        </form>

    </div>
    <div class="landing-right">
        <img src="~/Content/Contact1st.png" alt="Financial Journey">
    </div>
</section>

<footer id="footer">
    <div class="logo-container">
        <img src="~/Content/FINAL_FOOT.png" alt="Logo" class="logo"> <!-- Replace with your actual logo -->
    </div>
    <div class="links-container">
        <ul>
            <li><a href="@Url.Action("Index", "Home")">HOME</a></li>
            <li><a href="@Url.Action("WhyUs", "Home")">WHY US</a></li>
            <li><a href="@Url.Action("Features", "Home")">FEATURES</a></li>
            <li><a href="@Url.Action("ContactPage", "Home")">CONTACTS</a></li>
        </ul>
    </div>
    <ul class="privacy-policy">
        <li>Privacy Policy</li>
        <li>Terms of Use</li>
    </ul>
    <div class="social-media-container">
        <img src="~/Content/socialmedia.png" alt="Facebook">
        <img src="~/Content/4.png" alt="Instagram">
        <img src="~/Content/5.png" alt="Twitter">
    </div>

</footer>

