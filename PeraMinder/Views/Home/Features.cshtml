@{
    Layout = "~/Views/Shared/_Features.cshtml";
}

<nav class="navbar">
    <!-- Left side: Logo as a button -->
    <div class="navbar-left">
        <a href="@Url.Action("Index", "Home")" style="display: flex; align-items: center; padding: 0; margin: 0;">
            <img src="~/Content/FINAL - PeraMinder Logo.png" alt="Logo">
        </a>
        <div class="nav-links-left">
            <a href="@Url.Action("Index", "Home")" style="font-weight: 700 !important;">HOME</a>
            <a href="@Url.Action("WhyUs", "Home")" style="font-weight: 700 !important;">WHY US</a>
            <a href="@Url.Action("Features", "Home")" style="font-weight: 700 !important;">FEATURES</a>
            <a href="@Url.Action("ContactPage", "Home")" style="font-weight: 700 !important;">CONTACT</a>
        </div>
    </div>

    <!-- Right side: Sign Up button -->
    <a href="@Url.Action("RegistrationPage", "Home")" class="get-started" style="font-weight: 700 !important;">GET STARTED</a>

    <!-- Hamburger Icon -->
    <div class="hamburger-menu" ng-click="toggleMenu()">
        <!-- Bind the click event -->
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
    </div>
</nav>


<section class="features-section">

    <div class="features-image"></div>

    <div class="features-cards">
        <div class="card">
            <i class="material-icons">bar_chart</i>
            <h3>Summary Reports</h3>
            <p>Provides daily, weekly, and monthly summaries to monitor your <em>pagiging magastos</em>.</p>
        </div>
        <div class="card">
            <i class="material-icons">category</i>
            <h3>Categorized Transactions</h3>
            <p>Logs expenses under categories like food, transportation, utilities, etc.</p>
        </div>
        <div class="card">
            <i class="material-icons">payment</i>
            <h3>Payment Method Tracking</h3>
            <p>Keep track of how you spend (cash, credit, debit, or e-wallets).</p>
        </div>
        <div class="card">
            <i class="material-icons">insights</i>
            <h3>Financial Insights</h3>
            <p>See your income and expenses in real-time using interactive visualizations.</p>
        </div>
        <div class="card">
            <i class="material-icons">edit</i>
            <h3>Add, Edit, and Delete Transactions</h3>
            <p>Keep your records accurate and up-to-date.</p>
        </div>
        <div class="card">
            <i class="material-icons">calculate</i>
            <h3>Budget Management</h3>
            <p>Allows users to add available credit and automatically calculates the remaining balance.</p>
        </div>
    </div>
</section>

<footer id="footer">
    <div class="logo-container">
        <img src="~/Content/FINAL_FOOT.png" alt="Logo" class="logo"> <!-- Replace with your actual logo -->
    </div>
    <div class="links-container">
        <ul>
            <li><a href="@Url.Action("Index", "Home")">HOME</a></li>
            <li><a href="@Url.Action("WhyUs", "Home")">WHY US</a></li>
            <li><a href="@Url.Action("Features", "Home")">FEATURES</a></li>
            <li><a href="@Url.Action("ContactPage", "Home")">CONTACTS</a></li>
        </ul>
    </div>
    <ul class="privacy-policy">
        <li>Privacy Policy</li>
        <li>Terms of Use</li>
    </ul>
    <div class="social-media-container">
        <img src="~/Content/socialmedia.png" alt="Facebook">
        <img src="~/Content/4.png" alt="Instagram">
        <img src="~/Content/5.png" alt="Twitter">
    </div>

</footer>

<div class="copyright" style="background-color: #F5D547; width: 100%; text-align: center; padding: 1px 0; font-size: 0.8rem; margin-top: -2px;">
    <i><p>&copy; 2024 PeraMinder. All Rights Reserved.</p></i>
</div>
